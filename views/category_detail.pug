extends layout

block content 
  .category_detail
    .header
      h1 #{title}: #[em #{category.name}]

    .body 
      if items.length > 0
        ul 
          each item, index in items 
            li
              a(href=item.url) #{item.name} 
            if index < items.length - 1
              hr
      else 
        p This category has no items...