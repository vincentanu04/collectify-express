extends layout 

block content 
  .category_delete 
    .delete 
      .header 
        h1 #{title}: #[em #{category.name}]

      .body 
        if items.length > 0
          p Please delete the following items first before attempting to delete this category: 
            ul.delete 
              each item in items 
                li
                  a(href=item.url) #{item.name}
        else
          p Are you sure you want to 
            span(style='color: red') delete 
            | the category: #[em #{category.name}] ?

          form(method='post')
            button(type="submit") Delete