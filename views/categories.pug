extends layout 

block content
  .categories 
    .header
      h1=title
      a(href='/categories/create')
        button Add New Category

    .body
      ul 
        each category, index in categories 
          li 
            a(href=category.url) #{category.name}
          if index !== categories.length - 1
            hr


  link(rel="stylesheet", href="/stylesheets/categories.css")
        