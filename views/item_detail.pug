extends layout

block content 
  .item_detail
    .header
      h1 #{title}: #[em #{item.name}]

    .body 
      .detail
        .detail_header
          p #[strong About]: 
          p.text_box=item.info || 'No information'

        .detail_header
          p #[strong Category]: 
          a.colored(href=item.category.url) #[em #{item.category.name}]

        .detail_header 
          p #[strong Collected by]: 
          a.colored(href=item.collected_by.url) #[em #{item.collected_by.name}]

        .detail_header 
          p #[strong Collected date]: 
          p=item.collected_date_formatted === 'Invalid DateTime' ? 'Unknown' : item.collected_date_formatted

        hr
      
      .detail_links
        p
          a.colored(href=item.url + '/update') Update item details 
        p
          a.colored_red(href=item.url + '/delete') Delete item  